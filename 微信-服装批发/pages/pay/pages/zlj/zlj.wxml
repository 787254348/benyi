    <view style="color:#999999">
      <text class="text">30个/天</text>
      <text class="down" bindtap="down">-</text>
      <input class="number" maxlength="3" type="number" name="num" value="{{Number}}" bindblur="bindblur" />
      <text class="add" bindtap="add">+</text>
    </view>
  </view>
  <view class="bottom">点击确定确认使用助力金排名靠前</view>
  <button  class="btn-area"  formType="{{submit?'submit':''}}">确定</button>
</form>
