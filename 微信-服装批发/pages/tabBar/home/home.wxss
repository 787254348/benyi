/*商品goods*/

.goods {
  overflow: hidden;
  border-top: 8rpx solid #eee;
}

.goods-box {
  position: relative;
  overflow: hidden;
  float: left;
  width: 375rpx;
  border-bottom: 8rpx solid #eee;
}

.goods-box::after {
  position: absolute;
  top: 0;
  right: 0;
  width: 1px;
  height: 100%;
  border-right: 8rpx solid #eee;
  content: " ";
}

.goods-box:nth-child(2n)::after {
  border-right: none;
}

.gds-img {
  width: 300rpx;
  height: 300rpx;
  margin: 14rpx 34rpx;
  opacity: 1;
  /* transition: opacity 0.5s linear 1s ; */
}

/* .loaded{
