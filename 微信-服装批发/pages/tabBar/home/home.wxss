.goods-box .gds-title {
  font-size: 24rpx;
  height: 30rpx;
  padding: 0 12rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
}

